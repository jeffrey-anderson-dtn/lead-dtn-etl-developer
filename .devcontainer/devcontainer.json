{
  "name": "ETL Developer Assessment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": false,
      "installGradle": false
    }
  },
  "postCreateCommand": "pip install pyspark pyarrow && python generate_data.py",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "forwardPorts": [4040],
  "portsAttributes": {
    "4040": {
      "label": "Spark UI",
      "onAutoForward": "notify"
    }
  }
}
